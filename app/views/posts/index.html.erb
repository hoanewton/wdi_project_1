<h3>All posts</h3><hr>
<% @posts.each do |post| %>
	<ul>
		<li><h4><%= link_to post.title, post_path(post) %></h4></li>
		<%= post.content %><br>
		Posted: <%= post.created_at.to_date %> at <%= post.created_at.strftime("%H:%M:%S %Z") %> (<%= time_ago_in_words(post.created_at) %> ago)
	</ul><hr>
<% end %>
<h4><%= link_to	"Add Post", new_post_path %></h4>